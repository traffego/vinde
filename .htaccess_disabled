# =========================================
# PROTEÇÃO CONTRA BOTS MALICIOSOS
# =========================================

<IfModule mod_rewrite.c>
    # Bloquear user agents suspeitos
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} ^(java|curl|wget) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (winhttp|HTTrack|clshttp|archiver|loader|email|harvest|extract|grab|miner) [NC]
    RewriteRule .* - [F]
    
    # Bloquear métodos HTTP desnecessários
    RewriteCond %{REQUEST_METHOD} ^(TRACE|DELETE|TRACK) [NC]
    RewriteRule .* - [F]
</IfModule>

# =========================================
# CONFIGURAÇÕES FINAIS
# =========================================

# Charset padrão
AddDefaultCharset UTF-8

# Prevenir acessos diretos a arquivos de template
<FilesMatch "^(header|footer|sidebar)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

